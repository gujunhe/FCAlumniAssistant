/**app.wxss**/
@import "/pages/question/colorui.wxss";
@import "/pages/question/icon.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.mw-weixin.text-center {
    color: rgb(238, 238, 238);
    padding: 30rpx 0 0;
}
.bg-red {
  background-color: #FEAE82;
  color: #851000;
}
.text-red, .line-red, .lines-red {
  color: #FEAE82;
}
.line-red::after, .lines-red::after {
  border-color: #FEAE82;
}

page{
  background-color: #AFEEEE;
}
.mw-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
}
.mw-btn {
  position: absolute;
  top: 53vh;
  left: 0;
  width: 750rpx;
  z-index: 2;
}
.mw-answer {
  padding: 100rpx 150rpx 30rpx;
}
.mw-weixin.text-center {
  color: #333;
  padding: 30rpx 0 0;
}
.mw-title{
  text-align: center;
  font-size: 40rpx;
  color: rgba(43, 12, 12, 0.596);
  margin-top: 100rpx;
}
.mw-content1{
  margin-top: 200rpx;
  margin-left: 70rpx;
  text-align: left;
  font-size: 50rpx;
  color: rgb(212, 26, 26);
}
.mw-content2{
  margin-right: 50rpx;
  margin-top: 20rpx;
  text-align: right;
  font-size: 50rpx;
  color: rgb(212, 26, 26);
}
.aba{
  background-color:#b3b3b3;
  width: 80px;
  height: 45px;
  color: rgb(0, 0, 0);
  font-size: 30px;
  margin-left: 120px;
}
.aba:hover{
  box-shadow: 2px 2px 15px 2px rgb(190, 225, 255);
  background-color: transparent;
  color: rgb(165, 165, 165);
  /* 选择动画 */
  animation: login_mation 0.5s;
}
