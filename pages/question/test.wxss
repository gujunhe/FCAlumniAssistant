page{
  background-color:#f5e3e3;
}

.Q{
  margin-top:50rpx;
  text-align:center;
  font-size:40rpx;
  font-weight: 900;
}
.tip{
  text-align:center;
  color:slategrey;
  margin-top: 50rpx;
  font-size:40rpx; 
}
radio .wx-radio-input, checkbox .wx-checkbox-input {
  margin: 10px;
  width: 30px;
  height: 30px;
}
radio-group {
  display: inline-block;
}
.item{
  font-size:40rpx;
  text-align:left;
  margin:20rpx;
  margin-left: 60rpx;
}
.progress{
  margin:30rpx 85rpx 30rpx;
}
button::after{ 
	border: none; 
}
button {
    margin-top: 20px;
    border-radius: 30px;
    background: #eb2a2a; 
    width: 230px;
    color: white;
    padding: 0rpx 100rpx;
    font-size: 40rpx;
}

